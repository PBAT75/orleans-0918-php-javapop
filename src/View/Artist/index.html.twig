{% extends 'layout.html.twig' %}

{% block banner %}bannerArtist{% endblock %}


{% block content %}
    <h1>Artistes</h1>
    <div class="indexart container-fluid">
        <div class="artist row">
            {% for artist in artists %}
                <div class="artspace col-lg-6">
                    <div class="row">
                        <div class="artistlg col-lg-3"><img class="imgart card-img-top" src="{{ artist.picture }}" alt="Artiste"></div>
                        <div class="artistlg col-lg-3"><p class="name">{{ artist.name }}</p>
                            <img class="favorite" src="{{ artist.favorite }}">
                            <img class="local" src="{{ artist.local }}">
                        </div>
                    </div>
                </div>
            {% else %}
                <li>Nothing to display</li>
            {% endfor %}
        </div>
    </div>
{% endblock %}