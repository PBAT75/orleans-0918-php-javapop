{% extends 'layout.html.twig' %}

{% block titre_de_page %}Contact{% endblock %}
{% block banner %}banner2{% endblock %}
{% block content %}
<div class="container p-tb-150 p-b-150">
    {% if mailSent is not empty %}
        <div class="mailSent">{{ mailSent }}</div>
    {% endif %}
    {% if mailNotSent is not empty %}
        <div class="mailNotSent">{{ mailNotSent }}</div>
    {% endif %}

    <div class="row justify-content-center">
        <div class="col-md-5">
            <form method="post" action="">
                <div class="form-group">

                    {% if errors.lastName is defined %}
                        <div class="errorsForm">{{ errors.lastName }}</div>
                    {% endif %}
                    <input class="form-control" id="lastName" type="text" name="lastName" value="{{ values.lastName }}" placeholder="Votre nom *">
                </div>
                <div class="form-group">

                    {% if errors.email is defined %}
                        <div class="errorsForm">{{ errors.email }}</div>
                    {% endif %}
                    <input class="form-control" id="email" type="email" name="email" value="{{ values.email }}" placeholder="Votre Email *">
                </div>
                <div class="form-group">
                    <label class="selectSujet">
                        <select class="form-control" id="subject" name="subject" >
                            <option>Privatiser la JAVAPOP</option>
                            <option>Organiser un concert</option>
                            <option>Animation sur demande</option>
                            <option>Autre sujet</option>
                        </select>
                    </label>
                </div>
                <div class="form-group">
                    {% if errors.message is defined %}
                        <div class="errorsForm">{{ errors.message }}</div>
                    {% endif %}
                    <textarea class="form-control messageForm" name="message" id="message" placeholder="Votre Message *" >{{ values.message }}</textarea>
                </div>

                <button id="sendMessageButton" class="btn btn-primary btn-primary-contact btn-xl text-uppercase btn-form" type="submit">Envoyer</button>
            </form>
        </div>
        <div class="col-md-5 prestation">
            <ul class="list-unstyled">
                <li class="media">
                    <img class="mr-3" src="http://www.javapop.fr/ressources/img/event_location.jpg" height="150px" alt="Generic placeholder image">
                    <div class="media-body border-media">
                        <h5 class="mt-0 mb-1">Privatiser La JAVAPOP</h5>
                    </div>
                </li>
                <li class="media my-4">
                    <div class="media-body border-media">
                        <h5 class="mt-0 mb-1 text-right">Organiser un concert</h5>
                    </div>
                    <img class="ml-3" src="http://www.javapop.fr/ressources/img/event_concert.jpg" height="150px" alt="Generic placeholder image">
                </li>
                <li class="media bo">
                    <img class="mr-3" src="http://www.javapop.fr/ressources/img/event_insolite.jpg" height="150px" alt="Generic placeholder image">
                    <div class="media-body border-media">
                        <h5 class="mt-0 mb-1">Animation sur demande</h5>
                    </div>
                </li>
            </ul>
        </div>
    </div>
</div>
{% endblock %}