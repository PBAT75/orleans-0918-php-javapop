{% extends 'layout.html.twig' %}
{% block banner %}banner3{% endblock %}
{% block titre_de_page %}CARTE DES BOISSONS{% endblock %}
{% block content %}
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        {% set active = "active" %}
        {% set selected = true %}
        {% for type, drinks in drinksByType %}
            <li class="nav-item">
                <a class="mx-5 nav-link {{ active }}" id="{{ type }}-tab" data-toggle="tab" href="#{{ type }}"
                   role="tab" aria-controls="{{ type }}" aria-selected="{{ selected }}">{{ drinks[0].type_name }}</a>
            </li>
            {% set active = "" %}
            {% set selected = false %}
        {% endfor %}
    </ul>
    <div class="tab-content" id="myTabContent">
        {% set active = "show active" %}
        {% for type, drinks in drinksByType %}
            <div class="tab-pane fade {{ active }}" id="{{ type }}" role="tabpanel" aria-labelledby="{{ type }}-tab">
                <div class="row m-5">
                    <div class="col-8">
                        <table class="table text-primary">
                            <tbody>
                            {% for drink in drinks %}
                            <tr class="border-0">
                                <td class="font-weight-bold  border-0">{{ drink.name }} <br>
                                    <div class="text-lowercase small">
                                        {{ drink.ingredients }}
                                    </div>
                                </td>
                                <td class="text-center border-0">{{ drink.volume }} cl</td>
                                <td class="text-center  border-0">{{ drink.prix |number_format(2, '.', ',') }} â‚¬</td>
                                {% endfor %}
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            {% set active = "" %}
        {% endfor %}
    </div>
{% endblock %}